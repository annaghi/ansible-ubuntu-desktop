{
    "breadcrumbs.enabled": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": "explicit"
    },
    "editor.cursorBlinking": "phase",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.formatOnSave": true,
    "editor.lineHeight": 22,
    "editor.minimap.enabled": false,
    "editor.rulers": [140],
    "editor.wordWrapColumn": 140,
    "files.associations": {
        "**/.distinclude": "properties",
        "**/.editorconfig": "properties",
        "**/.env": "properties",
        "**/.gitattributes": "properties",
        "**/.gitignore": "properties",
        "**/.prettierignore": "properties",
        "*.code-workspace": "json",
        "*.html": "html",
        "*.mdx": "markdown",
        "*.svg": "html"
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git": true,
        "**/bower_components": true,
        "**/build": true,
        "**/elm-stuff": true,
        "**/node_modules": true,
        "**/vendor": true,
        "**/wp-admin": true,
        "**/wp-content/themes": true,
        "**/wp-content/upgrade": true,
        "**/wp-includes": true
    },
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "latex-workshop.latex.build.forceRecipeUsage": false,
    "latex-workshop.latex.magic.args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
    ],
    "markdown.validate.enabled": true,
    "markdownlint.config": {
        "MD024": false,
        "MD033": false,
        "MD041": false
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "phpsab.snifferShowSources": true,
    "python.formatting.blackPath": "black",
    "python.formatting.provider": "black",
    "prettier.useEditorConfig": true,
    "redhat.telemetry.enabled": false,
    "search.exclude": {
        "**/.git": true,
        "**/bower_components": true,
        "**/build": true,
        "**/elm-stuff": true,
        "**/node_modules": true,
        "**/vendor": true
    },
    "shellcheck.run": "onSave",
    "shellformat.effectLanguages": [
        "azcli",
        "dotenv",
        "gitignore",
        "hosts",
        "ignore",
        "jvmoptions",
        "properties",
        "shellscript",
        "spring-boot-properties"
    ],
    "svelte.enable-ts-plugin": true,
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.fontSize": 12,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "NOTE"
    ],
    "todomd.activatePattern": "**/{todo,TODO,todo.archive}.md",
    "todomd.sortProjectsView": "alphabetic",
    "yaml.disableAdditionalProperties": true,
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.{yml,yaml}",
        "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/ansible.json#/$defs/playbook": "*.playbook.{yml,yaml}"
    },
    "VSCodeCounter.endOfLine": "\n",
    "VSCodeCounter.useGitignore": true,
    "window.title": "${dirty} ${rootName}/${activeEditorMedium}",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.labelFormat": "short",
    "workbench.panel.defaultLocation": "right",

    "[ansible, ansible-jinja]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[css][scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[editorconfig]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[dotenv]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[ignore]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json][jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "files.trimTrailingWhitespace": false
    },
    "[php]": {
        "editor.defaultFormatter": "valeryanm.vscode-phpsab"
    },
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    "[properties]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[python]": {
        "editor.defaultFormatter": null
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },
    "[txt]": {
        "prettier.endOfLine": "crlf"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },
    "[yaml][yml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.editor.enablePreview": false
}
